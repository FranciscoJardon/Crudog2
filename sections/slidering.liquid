{% if section.settings.collectionSlider %}
  {% assign collection = collections[section.settings.collectionSlider] %}
  {% if collection %}
    <div class="imgScroll">
      <div>
        {% for product in collection.products %}
          <a href="{{ product.url }}"><img
              class="ImgSliderCollecion"
              src="{{ product.featured_image.src | img_url: '1000x' }}"
              alt="{{ product.featured_image.alt }}" /></a>

        {% endfor %}
      </div>
      <div>
        {% for product in collection.products %}
          <a href="{{ product.url }}"><img
              class="ImgSliderCollecion"
              src="{{ product.featured_image.src | img_url: '1000x' }}"
              alt="{{ product.featured_image.alt }}" /></a>

        {% endfor %}
      </div>
    </div>

  {% endif %}
{% endif %}
<style>
  .SliderProductos {
    width: 100%;
    height: 125px;
    position: relative;
    margin-bottom: 10rem;
  }
  .imgScroll {
    position: absolute;
    left: 0;
    width: 100%;
    display: flex;
    overflow-x: hidden;

  }
  .imgScroll div {
    display: flex;
    animation: animate 40s linear infinite;
    animation-delay: -40s;
  }
  .imgScroll div:nth-child(2) {
    animation: animate2 40s linear infinite;
    animation-delay: -20s;
  }
  .imgScroll:hover div,
  .imgScroll:hover div:nth-child(2) {
    animation-play-state: paused;
  }
  @keyframes animate {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }
  @keyframes animate2 {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-200%);
    }
  }
  .imgScroll div img {
    margin: 0 25px;
    max-width: 300px;
    height: 300px;
    object-fit: contain;
    border: 10px solid transparent;
    transition: 0.25s;
  }
  .imgScroll div img:hover {
    border: 10px solid #fff;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }
  .imgScroll:hover div img {
    opacity: 0.05;
    filter: blur(5px);
  }
  .imgScroll div img:hover {
    opacity: 1;
    filter: blur(0px);
  }
</style>

